<h3>Featured Restaurants</h3>

<h1><%= @restaurant.restaurant_name %></h1>
<hr>

<%= link_to "Back", restaurants_path %>
<p><a href="/restaurants/#{@restaurant.id}"><img class="th" src="<%= @restaurant[:photo_url] %>" width="250" height="250"></a></p>
<ul>
	<li>Capacity = <%= @restaurant.seats %></li>
	<li>Address = <%= @restaurant.street_address %></li>
</ul>

<h4>Menu</h4>
<p> ----------------------------------- </p>
<ul>
	<li><%= @restaurant.menu %></li>
</ul>


<ul>
	<% if current_user %>
		<!-- to add restaurant_reservation_path(@restaurant)
		- a reservation form (reservations#new) is yet to be created
			-->
		<li class="button success"><%= link_to "Make a Reservation", restaurant_path(@restaurant) %></li>
		<%= link_to "Make a Reservation", restaurant_reservations_path(@restaurant), :class => "button" %>
	<% else %>
	 	<li>Please <%= link_to "log in", new_session_path, class: 'button success' %> to Make a Reservation</li>
	<% end %>
</ul>



