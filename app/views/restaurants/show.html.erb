<div class="background">

<div class="row">
<div class="margin"></div>

	<h2>Seat Yourself ! Make a Reservation</h2>

	<div class="row reservation">
		
		<div class="medium-12 columns">
			<%= render 'reservation_form' %>

		</div>

	</div>

</div>

	<br>

	<div class="row">

	<%= link_to "Back", restaurants_path %><br>
		<div class="medium-8 columns">
		
		<div class="row">
			<h3><%= @restaurant.restaurant_name %></h3>
			<hr>
			
			<div class="medium-4 columns">

				<p><a href="/restaurants/#{@restaurant.id}"><img class="th" src="<%= @restaurant[:photo_url] %>" width="250" height="250"></a></p>
				<ul class="no-bullet">
					<li>Capacity = <%= @restaurant.seats %></li>
					<li>Address = <%= @restaurant.street_address %></li>
				</ul>

			</div>

			<div class="medium-8 columns">

				<h4>Menu</h4>

				<ul>
					<li><%= @restaurant.menu %></li>
				</ul>

			</div>

</div>	

	<ul>
		<% if current_user %>
			<!-- to add restaurant_reservation_path(@restaurant)
			- a reservation form (reservations#new) is yet to be created
				-->
			<%= link_to "Make a Reservation", restaurant_reservations_path(@restaurant), :class => "button no-bullet" %>
		<% else %>
		 	<li>Please <%= link_to "log in", new_session_path %> to Make a Reservation</li>
		<% end %>
	</ul>


	<%= render 'review' %>


</div>


	


		<div class="medium-3 columns sidebar">


			<%= render 'search' %>
		

		<div class="row">

			<div class="medium-12 columns">
			<h5>New in Town!</h5>

				 <%= render 'new_restaurant' %>
				
			</div>
			
			<!-- Featured restaurants -->
			<div class="medium-12 columns featured">
				<h5>Featured Restaurants</h5>

				<%= render 'featured_restaurant' %>

			</div>

			<!-- Available Tonight! -->
			<div class="medium-12 columns">
			<h5 class="flash">Available Tonight!</h5>
				<%= render 'available_restaurant' %>

			</div>
		
			
			</div><!-- row -->	
		 </div>

	</div><!-- row -->		


</div><!-- row -->




