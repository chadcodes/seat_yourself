<div class="background">

	<div class="row">
		<p><h2>Make a Reservation</h2></p>
	</div>

	<div class="row">

		<div class="medium-8 columns">
			<div class="row">
				<h3><%= @restaurant.name %></h3>

			<div class="medium-6 columns">

				<p><a href="/restaurants/#{@restaurant.id}"><img class="th" src="<%= @restaurant[:photo_url] %>" width="250" height="250"></a></p>
				<ul class="no-bullet">
					<li>Capacity = <%= @restaurant.capacity %> | Capacity = <%= @restaurant.price %></li>
					<li>Address = <%= @restaurant.address %></li>
				</ul>

			</div>

			<div class="medium-6 columns">

				<h4>Menu</h4>

				<ul>
					<li><%= @restaurant.menu %></li>
				</ul>

			</div>

</div>

	<ul>
		<% if current_user %>
			<!-- to add restaurant_reservation_path(@restaurant)
			- a reservation form (reservations#new) is yet to be created
				-->
			<%= link_to "Make a Reservation", restaurant_reservations_path(@restaurant), :class => "button no-bullet" %>
		<% else %>
		 	<li>Please <%= link_to "log in", new_session_path %> to Make a Reservation</li>
		<% end %>
	</ul>


	<%= render 'review' %>


</div>





		<div class="medium-3 columns sidebar">

			<%= render 'search' %>

	</div><!-- row -->


</div><!-- row -->




