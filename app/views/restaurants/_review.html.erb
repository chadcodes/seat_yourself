<div class="reviews">
		<h4>Reviews</h4>
			
			<% @restaurant.reviews.each do |review| %>
			    <p>
			      <%= review.comment %>
			      <p>----------------------------------</p>
			      <br>
			      <% if review.user != nil %>
			       <p><em>by <%= review.user.email %><br> Added on: <%= review.created_at %></em></p> 
			      
			      <% end %>
			    </p>
  			<% end %>

  			
  		<% if current_user %>

		  <h4>Add a Review</h4>

		  <%= form_for([@restaurant, @review]) do |f| %>
		    <% if @review.errors.any? %>
		      <div id="error_explanation">
		        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

		        <ul>
		        <% @review.errors.full_messages.each do |msg| %>
		          <li><%= msg %></li>
		        <% end %>
		        </ul>
		      </div>
		    <% end %>

		    <div class="field">
		      <%= f.label :comment %><br />
		      <%= f.text_area :comment %>
		    </div><br>
		    <div class="actions">
		      <%= f.submit %>
		    </div>
		  <% end %>

		<% else %>
		
			<ul>
				<li>Please <%= link_to "log in", new_session_path %> to add a review.</li>
			</ul>

		<% end %>

		
		</div>
