

<div class="search-box--restaurant">

	  <ul class="tabs" data-tab>
	  <li class="tab-title active"><a href="#search_by_restaurant">Restaurant</a></li>
	  <li class="tab-title"><a href="#search_by_cuisine">Cuisine</a></li>
	 
	</ul>


	<div class="tabs-content">
	  <div class="content active" id="search_by_restaurant">
			<%= form_tag(restaurants_path, :method => "get", class: "navbar-form", id: "search-form") do %>
		    <div class="input-append">
		      <%= text_field_tag :search, params[:search], placeholder: "Search Restaurants (select form required)" %>
		      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
		           of using a Rails form helper -->

		       <%= render 'reservation' %>
		      <button  class="button success tiny right radius" type="submit">Find a Table!<i class="icon-search"></i></button>
		    </div>
		  <% end %>
	  </div>


	  <div class="content" id="search_by_cuisine">
			<%= form_tag(restaurants_path, :method => "get", class: "navbar-form", id: "search-form") do %>
		    <div class="input-append">
		      <%= text_field_tag :search, params[:search], placeholder: "Search Cuisine Type (select form required)" %>
		      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
		           of using a Rails form helper -->


	       		<%= render 'reservation' %>
		      <button  class="button success tiny right radius" type="submit">Find a Table!<i class="icon-search"></i></button>
		    </div>
		  <% end %>
	  </div>
	 
	</div><!-- tabs-content -->

</div>