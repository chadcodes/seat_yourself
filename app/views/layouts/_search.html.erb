

<div class="medium-8 medium-offset-2 columns search_options">

	  <ul class="tabs" data-tab>
	  <li class="tab-title active"><a href="#search_by_restaurant">Search Restaurant</a></li>
	  <li class="tab-title"><a href="#search_by_cuisine">Search by Cuisine Type</a></li>
	 
	</ul>


	<div class="tabs-content">
	  <div class="content active" id="search_by_restaurant">
			<%= form_tag(restaurants_path, :method => "get", class: "navbar-form", id: "search-form") do %>
		    <div class="input-append">
		      <%= text_field_tag :search, params[:search], placeholder: "Search Restaurants" %>
		      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
		           of using a Rails form helper -->
		      <button  class="button success right radius" type="submit">Search<i class="icon-search"></i></button>
		    </div>
		  <% end %>
	  </div>
	  <div class="content" id="search_by_cuisine">
			<%= form_tag(restaurants_path, :method => "get", class: "navbar-form", id: "search-form") do %>
		    <div class="input-append">
		      <%= text_field_tag :search, params[:search], placeholder: "Search Cuisine Type" %>
		      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
		           of using a Rails form helper -->
		      <button  class="button success right radius" type="submit">Search<i class="icon-search"></i></button>
		    </div>
		  <% end %>
	  </div>
	 
	</div><!-- tabs-content -->

</div>